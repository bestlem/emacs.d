(major-mode-hydra-define $1 nil
  ("$0"
   (("b" eval-buffer "buffer")
    ("e" eval-defun "defun")
    ("r" eval-region "region"))
   "REPL"
   (("I" ielm "ielm")
    ("x" matcha-goto-scratch "*Scratch*")))